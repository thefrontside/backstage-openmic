---
layout: base
---

<main id="main" class="main inner box-flex pt-1000 pb-300" tabindex="-1">
  <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe src="{{vimeoEmbedLink}}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;" title="roadie&amp;#039;s multi-tenant backstage architecture"></iframe>
  </div>
  <script src="https://player.vimeo.com/api/player.js"></script>

  <header class="mt-500">
    <h1>
      {{ title }}
    </h1>
    <p>
      {{ description }}
    </p>
    <span class="gradient-line mt-1000 mb-800"></span>
  </header>
</main>

<div class="main inner box-flex pt-300 pb-300">
  <h2 class="mb-500">
    Other recordings
    <img src="/images/decor-eye.png" alt="" class="inline-img-decor"/>
  </h2>
  <ul class="laptop:box-flex mt-600 flex-wrap">
    {% for recording in otherTalks %}
      <li class="laptop:width-half pr-600 mt-500 mb-500">
        <h3 class="mb-500 recording-listing">
          <a href="{{recording.url}}" class="color-white">
            {{recording.data.title}}
          </a>
        </h3>
        <p>
          {{recording.data.description}}
        </p>
        <a href="{{ talk.url }}" class="button button__secondary mt-500" title="Watch {{ recording.data.title }}">
          Watch Talk
        </a>
      </li>
    {% endfor %}
  </ul>
  <span class="gradient-line mt-1000 mb-800"></span>
</div>
